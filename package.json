{
  "name": "letsklay",
  "workspaces": [
    "src",
    "server"
  ],
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach --parallel run build",
    "start": "yarn workspaces foreach --parallel run start",
    "lint": "yarn workspaces foreach --parallel run lint",
    "storybook": "start-storybook -p 6006 -s src",
    "build-storybook": "build-storybook -s src",
    "dev:back": "cd server && yarn dev",
    "dev:front": "cd src && yarn dev",
    "dev": "concurrently \"yarn dev:back\" \"yarn dev:front\" "
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.10.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "^4.4.2"
  },
  "packageManager": "yarn@3.2.3"
}
